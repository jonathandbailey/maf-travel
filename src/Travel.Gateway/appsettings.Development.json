{
"Logging": {
  "LogLevel": {
    "Default": "Information",
    "Microsoft.AspNetCore": "Warning",
    "Yarp": "Debug",
    "Yarp.ReverseProxy": "Debug"
  }
},
  "ReverseProxy": {
    "Routes": {
      "route1": {
        "ClusterId": "application.api",
        "Match": {
          "Path": "api/travel/{**catch-all}"
        }
      },
      "route2": {
        "ClusterId": "experience.api",
        "Match": {
          "Path": "/ag-ui/{**catch-all}"
        },
        "Transforms": [
          { "RequestHeadersCopy": "true" },
          { "ResponseHeadersCopy": "true" }
        ]
      }
    },
    "Clusters": {
      "application.api": {
        "Destinations": {
          "destination1": {
            "Address": "https://localhost:7010"
          }
        }
      },
      "experience.api": {
        "Destinations": {
          "destination2": {
            "Address": "https://localhost:5001"
          }
        },
        "HttpRequest": {
          "ActivityTimeout": "00:10:00",
          "Version": "2",
          "VersionPolicy": "RequestVersionOrLower"
        }
      }
    }
  }
}
